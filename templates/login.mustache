{{!
    @template theme_boost/login

    Login page template

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Login page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headers keep HTML validators happy</h1>"
        }
    }
}}
{{{ output.doctype }}}
<html {{{ output.htmlattributes }}}>
<head>
    <title>{{{ output.page_title }}}</title>
    <link rel="shortcut icon" href="{{{ favicon }}}" />
    {{{ output.standard_head_html }}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<header class="pos-f-t navbar navbar-full navbar-light bg-faded navbar-static-top moodle-has-zindex">

    <div class="container-fluid">
        <div class="pull-xs-right nav-link">
            {{{ output.secure_login_info }}}
        </div>

    </div>
</header>
<body {{{ bodyattributes }}}>

<div id="page-wrapper" class="{{{ pageclass }}}">

    {{{ output.standard_top_of_body_html }}}

    <div id="page" class="container-fluid">
        {{{ videourlhtml }}}
        <div id="page-content">
            <div id="region-main-box">
                <section id="region-main" class="col-xs-12">
                    {{{ sitelogohtml }}}
                    {{{ loginmessagetophtml }}}
                    {{{ output.course_content_header }}}
                    {{{ output.main_content }}}
                    {{{ output.course_content_footer }}}
                    {{{ loginmessagebottomhtml }}}
                </section>
            </div>
        </div>
    </div>
</div>
<footer id="page-footer" class="p-y-1 bg-inverse">
    <div class="container-fluid">
        <div id="course-footer">{{{ output.course_footer }}}</div>
         {{{ footerhtml }}}
        {{{ output.standard_end_of_body_html }}}
    </div>
</footer>

</body>
</html>
{{#js}}
require(['theme_boost/loader']);
{{/js}}
